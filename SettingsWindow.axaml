<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:HyPrism.ViewModels"
        xmlns:cv="using:HyPrism.Converters"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="HyPrism.SettingsWindow"
        x:DataType="vm:SettingsViewModel"
        Title="Settings"
        Width="900" Height="650"
        WindowStartupLocation="CenterOwner"
        SystemDecorations="None"
        Background="Transparent"
        TransparencyLevelHint="AcrylicBlur"
        ExtendClientAreaToDecorationsHint="True">

    <Window.Resources>
        <cv:StringEqualityConverter x:Key="StringEqualityConverter"/>
        <SolidColorBrush x:Key="HytaleOrangeBrush" Color="#FFA845"/>
    </Window.Resources>
    
    <Window.Styles>
        <Style Selector="Button.TabButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" CornerRadius="4">
                        <TextBlock Text="{TemplateBinding Content}" FontWeight="Medium"/>
                    </Border>
                </ControlTemplate>
            </Setter>
        </Style>
        <Style Selector="Button.TabButton:pointerover">
            <Setter Property="Background" Value="#1AFFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <!-- Active Tab Styling would require ValueConverter on the button itself or different approach, keeping simple for now -->
    </Window.Styles>

    <Border Background="#F2111111" CornerRadius="12" BorderBrush="#33FFFFFF" BorderThickness="1" ClipToBounds="True">
        <Grid ColumnDefinitions="240, *">
            
            <!-- Sidebar -->
            <Border Grid.Column="0" Background="#111111">
                <Grid RowDefinitions="Auto, *">
                    <TextBlock Text="Settings" Grid.Row="0" Margin="25,30,0,30" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    
                    <ScrollViewer Grid.Row="1">
                        <StackPanel Spacing="2" Margin="10,0">
                            <Button Classes="TabButton" Command="{Binding SwitchTabCommand}" CommandParameter="profile" Content="My Profile" Foreground="{Binding ActiveTab, Converter={StaticResource StringEqualityConverter}, ConverterParameter=profile, Converter={x:Static ObjectConverters.IsNull}}"/>
                            <Button Classes="TabButton" Command="{Binding SwitchTabCommand}" CommandParameter="general" Content="General"/>
                            <Button Classes="TabButton" Command="{Binding SwitchTabCommand}" CommandParameter="visual" Content="Visuals"/>
                            <Button Classes="TabButton" Command="{Binding SwitchTabCommand}" CommandParameter="language" Content="Language"/>
                            <Button Classes="TabButton" Command="{Binding SwitchTabCommand}" CommandParameter="data" Content="Data" IsEnabled="False"/>
                            <Button Classes="TabButton" Command="{Binding SwitchTabCommand}" CommandParameter="instances" Content="Instances" IsEnabled="False"/>
                            <Button Classes="TabButton" Command="{Binding SwitchTabCommand}" CommandParameter="about" Content="About"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Content Area -->
            <Grid Grid.Column="1" Background="#1E1E1E">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header / Close -->
                <Grid Grid.Row="0" Margin="30,0">
                    <Button Command="{Binding CloseCommand}" HorizontalAlignment="Right" VerticalAlignment="Center"
                            Background="#33FFFFFF" Foreground="White" Width="32" Height="32" CornerRadius="16"
                            Content="âœ•" Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                </Grid>
                
                <!-- Tab Contents -->
                <ScrollViewer Grid.Row="1" Padding="30,0,30,30">
                    <Panel>
                        
                        <!-- Profile Tab -->
                        <StackPanel IsVisible="{Binding ActiveTab, Converter={StaticResource StringEqualityConverter}, ConverterParameter=profile}" Spacing="25">
                            <TextBlock Text="My Profile" FontSize="32" FontWeight="Bold" Foreground="White"/>
                            
                            <!-- Avatar Section -->
                            <Border Background="#252525" CornerRadius="8" Padding="20">
                                <StackPanel Orientation="Horizontal" Spacing="20">
                                    <Border Width="80" Height="80" CornerRadius="40" Background="{StaticResource HytaleOrangeBrush}" ClipToBounds="True">
                                        <TextBlock Text=":)" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" FontWeight="Bold"/>
                                    </Border>
                                    <StackPanel VerticalAlignment="Center" Spacing="5">
                                        <TextBlock Text="Avatar" FontWeight="Bold" Foreground="White"/>
                                        <Button Content="Upload Skin" Background="#404040" Foreground="White"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Nickname -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="Display Name" FontWeight="Medium" Foreground="#CCCCCC"/>
                                <TextBox Text="{Binding Nick}" Background="#252525" Foreground="White" BorderThickness="0" Padding="15" CornerRadius="6" FontSize="16"/>
                                <TextBlock Text="This name will be shown in game." FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- General Tab -->
                        <StackPanel IsVisible="{Binding ActiveTab, Converter={StaticResource StringEqualityConverter}, ConverterParameter=general}" Spacing="25">
                            <TextBlock Text="General Settings" FontSize="32" FontWeight="Bold" Foreground="White"/>
                            
                            <Border Background="#252525" CornerRadius="8" Padding="20">
                                <StackPanel Spacing="20">
                                    <Grid ColumnDefinitions="*, Auto">
                                        <StackPanel Grid.Column="0" Spacing="5">
                                            <TextBlock Text="Close Launcher" FontWeight="Bold" Foreground="White"/>
                                            <TextBlock Text="Close the launcher automatically when the game starts." FontSize="14" Foreground="Gray" TextWrapping="Wrap"/>
                                        </StackPanel>
                                        <ToggleSwitch Grid.Column="1" IsChecked="{Binding CloseAfterLaunch}" OnContent="" OffContent=""/>
                                    </Grid>
                                    
                                    <Rectangle Height="1" Fill="#333333"/>
                                    
                                    <Grid ColumnDefinitions="*, Auto">
                                        <StackPanel Grid.Column="0" Spacing="5">
                                            <TextBlock Text="Disable News" FontWeight="Bold" Foreground="White"/>
                                            <TextBlock Text="Hide the news feed from the main menu." FontSize="14" Foreground="Gray" TextWrapping="Wrap"/>
                                        </StackPanel>
                                        <ToggleSwitch Grid.Column="1" IsChecked="{Binding DisableNews}" OnContent="" OffContent=""/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Launcher Path Stub -->
                             <StackPanel Spacing="8">
                                <TextBlock Text="Launcher Storage" FontWeight="Medium" Foreground="#CCCCCC"/>
                                <Grid ColumnDefinitions="*, 10, Auto">
                                    <TextBox Grid.Column="0" Text="/path/to/launcher/data" IsReadOnly="True" Background="#252525" Foreground="Gray" BorderThickness="0" Padding="10" CornerRadius="6"/>
                                    <Button Grid.Column="2" Content="Browse" Background="#404040" Foreground="White"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>

                    </Panel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Border>

</Window>
