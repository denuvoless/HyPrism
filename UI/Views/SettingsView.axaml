<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:HyPrism.UI.ViewModels"
             xmlns:nav="using:HyPrism.UI.Components.Navigation"
             xmlns:inputs="using:HyPrism.UI.Components.Inputs"
             xmlns:buttons="using:HyPrism.UI.Components.Buttons"
             xmlns:cv="using:HyPrism.UI.Converters"
             xmlns:svg="clr-namespace:Avalonia.Svg.Skia;assembly=Avalonia.Svg.Skia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="HyPrism.UI.Views.SettingsView"
             x:DataType="vm:SettingsViewModel">

    <UserControl.Resources>
        <cv:StringEqualityConverter x:Key="StringEqualityConverter"/>
        <SolidColorBrush x:Key="HytaleOrangeBrush" Color="#FFA845"/>
    </UserControl.Resources>
    
    <UserControl.Styles>
        <Style Selector="Button.TabButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" CornerRadius="6">
                        <ContentPresenter Content="{TemplateBinding Content}" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter>
        </Style>
        <Style Selector="Button.TabButton:pointerover">
            <Setter Property="Background" Value="#1AFFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <!-- Close Button Hover Style -->
        <Style Selector="Button#CloseButton:pointerover">
            <Setter Property="Background" Value="#33FF4444"/>
        </Style>
        <Style Selector="Button#CloseButton:pointerover svg|Svg">
            <Setter Property="Css" Value="* { stroke: #FF4444; fill: none; }"/>
        </Style>
    </UserControl.Styles>

    <Border Background="#F2111111" CornerRadius="12" BorderBrush="#33FFFFFF" BorderThickness="1" ClipToBounds="True" BoxShadow="0 10 30 5 #000000">
        <Grid ColumnDefinitions="240, *">
            
            <!-- Sidebar -->
            <Border Grid.Column="0" Background="#111111">
                <Grid RowDefinitions="Auto, *">
                    <TextBlock Text="{Binding SettingsTitle^}" Grid.Row="0" Margin="30,30,30,30" FontSize="28" FontWeight="Bold" Foreground="White" FontFamily="{StaticResource Poppins}"/>
                    
                    <ScrollViewer Grid.Row="1">
                        <StackPanel Spacing="4" Margin="10,0">
                            
                            <nav:SidebarItem Text="{Binding MyProfile^}" 
                                             Command="{Binding SwitchTabCommand}" 
                                             CommandParameter="profile"
                                             IsSelected="{Binding ActiveTab, Converter={StaticResource StringEqualityConverter}, ConverterParameter='profile'}">
                                <nav:SidebarItem.Icon>
                                    <svg:Svg Path="/Assets/Icons/user.svg" Width="18" Height="18"/>
                                </nav:SidebarItem.Icon>
                            </nav:SidebarItem>
                            
                            <nav:SidebarItem Text="{Binding General^}" 
                                             Command="{Binding SwitchTabCommand}" 
                                             CommandParameter="general"
                                             IsSelected="{Binding ActiveTab, Converter={StaticResource StringEqualityConverter}, ConverterParameter='general'}">
                                <nav:SidebarItem.Icon>
                                    <svg:Svg Path="/Assets/Icons/settings.svg" Width="18" Height="18"/>
                                </nav:SidebarItem.Icon>
                            </nav:SidebarItem>

                            <nav:SidebarItem Text="{Binding Visuals^}" 
                                             Command="{Binding SwitchTabCommand}" 
                                             CommandParameter="visual"
                                             IsSelected="{Binding ActiveTab, Converter={StaticResource StringEqualityConverter}, ConverterParameter='visual'}">
                                <nav:SidebarItem.Icon>
                                    <svg:Svg Path="/Assets/Icons/image.svg" Width="18" Height="18"/>
                                </nav:SidebarItem.Icon>
                            </nav:SidebarItem>

                            <nav:SidebarItem Text="{Binding Language^}" 
                                             Command="{Binding SwitchTabCommand}" 
                                             CommandParameter="language"
                                             IsSelected="{Binding ActiveTab, Converter={StaticResource StringEqualityConverter}, ConverterParameter='language'}">
                                <nav:SidebarItem.Icon>
                                    <svg:Svg Path="/Assets/Icons/globe.svg" Width="18" Height="18"/>
                                </nav:SidebarItem.Icon>
                            </nav:SidebarItem>

                            <nav:SidebarItem Text="{Binding Data^}" 
                                             Command="{Binding SwitchTabCommand}" 
                                             CommandParameter="data"
                                             IsSelected="{Binding ActiveTab, Converter={StaticResource StringEqualityConverter}, ConverterParameter='data'}"
                                             IsEnabled="False">
                                <nav:SidebarItem.Icon>
                                    <svg:Svg Path="/Assets/Icons/database.svg" Width="18" Height="18"/>
                                </nav:SidebarItem.Icon>
                            </nav:SidebarItem>

                            <nav:SidebarItem Text="{Binding Instances^}" 
                                             Command="{Binding SwitchTabCommand}" 
                                             CommandParameter="instances"
                                             IsSelected="{Binding ActiveTab, Converter={StaticResource StringEqualityConverter}, ConverterParameter='instances'}"
                                             IsEnabled="False">
                                <nav:SidebarItem.Icon>
                                    <svg:Svg Path="/Assets/Icons/hard-drive.svg" Width="18" Height="18"/>
                                </nav:SidebarItem.Icon>
                            </nav:SidebarItem>

                            <nav:SidebarItem Text="{Binding About^}" 
                                             Command="{Binding SwitchTabCommand}" 
                                             CommandParameter="about"
                                             IsSelected="{Binding ActiveTab, Converter={StaticResource StringEqualityConverter}, ConverterParameter='about'}">
                                <nav:SidebarItem.Icon>
                                    <svg:Svg Path="/Assets/Icons/info.svg" Width="18" Height="18"/>
                                </nav:SidebarItem.Icon>
                            </nav:SidebarItem>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Content Area -->
            <Grid Grid.Column="1" Background="#1E1E1E">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header / Close -->
                <Grid Grid.Row="0">
                    <buttons:CloseButton Command="{Binding CloseCommand}"
                                         HorizontalAlignment="Right"
                                         VerticalAlignment="Top"
                                         Margin="20,20,20,0"/>
                </Grid>
                
                <!-- Tab Contents -->
                <ScrollViewer Grid.Row="1" Padding="30,0,30,30">
                    <Panel>
                        
                        <!-- Profile Tab -->
                        <StackPanel IsVisible="{Binding ActiveTab, Converter={StaticResource StringEqualityConverter}, ConverterParameter=profile}" Spacing="25">
                            <TextBlock Text="My Profile" FontSize="28" FontWeight="Bold" Foreground="White" FontFamily="{StaticResource Poppins}"/>
                            
                            <!-- Avatar Section -->
                            <Border Background="#252525" CornerRadius="12" Padding="20">
                                <StackPanel Orientation="Horizontal" Spacing="20">
                                    <Border Width="80" Height="80" CornerRadius="40" Background="{DynamicResource SystemAccentBrush}" ClipToBounds="True">
                                        <TextBlock Text=":)" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" FontWeight="Bold"/>
                                    </Border>
                                    <StackPanel VerticalAlignment="Center" Spacing="5">
                                        <TextBlock Text="Avatar" FontWeight="Bold" Foreground="White"/>
                                        <Button Content="Upload Skin" Background="#404040" Foreground="White" CornerRadius="6" Padding="15,8"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Nickname -->
                            <StackPanel Spacing="8">
                                <inputs:ActionInput Label="Display Name" Text="{Binding Nick}" MaxLength="16"/>
                                <TextBlock Text="This name will be shown in game (1-16 characters)." FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                            
                            <!-- UUID -->
                            <StackPanel Spacing="8">
                                <inputs:ActionInput Label="UUID" Text="{Binding UUID}">
                                    <inputs:ActionInput.RightContent>
                                        <StackPanel Orientation="Horizontal" Spacing="6">
                                            <Button Command="{Binding CopyUuidCommand}" 
                                                    Background="Transparent" 
                                                    Foreground="White" 
                                                    CornerRadius="6" 
                                                    Padding="8" 
                                                    ToolTip.Tip="Copy UUID">
                                                <svg:Svg Path="/Assets/Icons/copy.svg" Width="16" Height="16"/>
                                            </Button>
                                            <Button Command="{Binding RandomizeUuidCommand}" 
                                                    Background="Transparent" 
                                                    Foreground="White" 
                                                    CornerRadius="6" 
                                                    Padding="8" 
                                                    ToolTip.Tip="Generate Random UUID">
                                                <svg:Svg Path="/Assets/Icons/refresh-cw.svg" Width="16" Height="16"/>
                                            </Button>
                                        </StackPanel>
                                    </inputs:ActionInput.RightContent>
                                </inputs:ActionInput>
                                <TextBlock Text="Your unique identifier for multiplayer. Changing this will reset your skin!" FontSize="12" Foreground="Orange"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- General Tab -->
                        <StackPanel IsVisible="{Binding ActiveTab, Converter={StaticResource StringEqualityConverter}, ConverterParameter=general}" Spacing="25">
                            <TextBlock Text="General Settings" FontSize="28" FontWeight="Bold" Foreground="White" FontFamily="{StaticResource Poppins}"/>
                            
                            <!-- Launcher Storage -->
                            <StackPanel Spacing="8">
                                <inputs:ActionInput Label="Launcher Storage" Text="{Binding LauncherDataDirectory}" IsReadOnly="True">
                                    <inputs:ActionInput.RightContent>
                                        <Button Command="{Binding BrowseLauncherDataCommand}" 
                                                Background="#404040" 
                                                Foreground="White" 
                                                CornerRadius="6" 
                                                Padding="12,8">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <svg:Svg Path="/Assets/Icons/hard-drive.svg" Width="16" Height="16"/>
                                                <TextBlock Text="Browse" VerticalAlignment="Center" FontSize="13"/>
                                            </StackPanel>
                                        </Button>
                                    </inputs:ActionInput.RightContent>
                                </inputs:ActionInput>
                                <TextBlock Text="Location where launcher data and game files are stored." FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                            
                            <!-- Update Channel -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="Update Channel" FontWeight="Medium" Foreground="#CCCCCC"/>
                                <ComboBox SelectedItem="{Binding SelectedBranchItem}" 
                                          ItemsSource="{Binding BranchItems}"
                                          Background="#252525" 
                                          Foreground="White" 
                                          BorderThickness="0" 
                                          CornerRadius="8" 
                                          Padding="15" 
                                          FontSize="14">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding DisplayName}"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                <TextBlock Text="You will receive stable releases only." FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                            
                            <!-- Toggles -->
                            <Border Background="#252525" CornerRadius="12" Padding="20">
                                <StackPanel Spacing="20">
                                    <Grid ColumnDefinitions="*, Auto">
                                        <StackPanel Grid.Column="0" Spacing="5">
                                            <TextBlock Text="Close Launcher" FontWeight="Bold" Foreground="White"/>
                                            <TextBlock Text="Close the launcher automatically when the game starts." FontSize="13" Foreground="Gray" TextWrapping="Wrap"/>
                                        </StackPanel>
                                        <ToggleSwitch Grid.Column="1" IsChecked="{Binding CloseAfterLaunch}" OnContent="" OffContent="" Background="#333"/>
                                    </Grid>
                                    
                                    <Rectangle Height="1" Fill="#333333"/>
                                    
                                    <Grid ColumnDefinitions="*, Auto">
                                        <StackPanel Grid.Column="0" Spacing="5">
                                            <TextBlock Text="Disable News" FontWeight="Bold" Foreground="White"/>
                                            <TextBlock Text="Hide the news feed from the main menu." FontSize="13" Foreground="Gray" TextWrapping="Wrap"/>
                                        </StackPanel>
                                        <ToggleSwitch Grid.Column="1" IsChecked="{Binding DisableNews}" OnContent="" OffContent="" Background="#333"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                        
                        <!-- Visual Tab -->
                        <StackPanel IsVisible="{Binding ActiveTab, Converter={StaticResource StringEqualityConverter}, ConverterParameter=visual}" Spacing="25">
                            <TextBlock Text="Visual Settings" FontSize="28" FontWeight="Bold" Foreground="White" FontFamily="{StaticResource Poppins}"/>
                            
                            <!-- Accent Color (Placeholder) -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="Accent Color" FontWeight="Medium" Foreground="#CCCCCC"/>
                                <TextBlock Text="Theme customization will be available soon." FontSize="13" Foreground="Gray"/>
                            </StackPanel>
                            
                            <!-- Background (Placeholder) -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="Background" FontWeight="Medium" Foreground="#CCCCCC"/>
                                <TextBlock Text="Background customization will be available soon." FontSize="13" Foreground="Gray"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Language Tab -->
                        <StackPanel IsVisible="{Binding ActiveTab, Converter={StaticResource StringEqualityConverter}, ConverterParameter=language}" Spacing="25">
                            <TextBlock Text="Language Settings" FontSize="28" FontWeight="Bold" Foreground="White" FontFamily="{StaticResource Poppins}"/>
                            
                            <StackPanel Spacing="8">
                                <TextBlock Text="Interface Language" FontWeight="Medium" Foreground="#CCCCCC"/>
                                <TextBlock Text="Select your preferred language for the launcher interface" FontSize="13" Foreground="Gray"/>
                                
                                <ComboBox ItemsSource="{Binding LanguageItems}"
                                          SelectedItem="{Binding SelectedLanguageItem}"
                                          Width="250"
                                          HorizontalAlignment="Left"
                                          Margin="0,8,0,0">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding DisplayName}"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                
                                <TextBlock Text="Note: Some text may remain in English until full localization is complete." 
                                           FontSize="12" 
                                           Foreground="#888" 
                                           Margin="0,12,0,0"
                                           TextWrapping="Wrap"
                                           MaxWidth="500"
                                           HorizontalAlignment="Left"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Data Tab -->
                        <StackPanel IsVisible="{Binding ActiveTab, Converter={StaticResource StringEqualityConverter}, ConverterParameter=data}" Spacing="25">
                            <TextBlock Text="Data Management" FontSize="28" FontWeight="Bold" Foreground="White" FontFamily="{StaticResource Poppins}"/>
                            
                            <StackPanel Spacing="8">
                                <TextBlock Text="Cache &amp; Data" FontWeight="Medium" Foreground="#CCCCCC"/>
                                <TextBlock Text="Data management features will be available soon." FontSize="13" Foreground="Gray"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Instances Tab -->
                        <StackPanel IsVisible="{Binding ActiveTab, Converter={StaticResource StringEqualityConverter}, ConverterParameter=instances}" Spacing="25">
                            <TextBlock Text="Instance Management" FontSize="28" FontWeight="Bold" Foreground="White" FontFamily="{StaticResource Poppins}"/>
                            
                            <StackPanel Spacing="8">
                                <TextBlock Text="Game Instances" FontWeight="Medium" Foreground="#CCCCCC"/>
                                <TextBlock Text="Instance management will be available soon." FontSize="13" Foreground="Gray"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- About Tab -->
                        <StackPanel IsVisible="{Binding ActiveTab, Converter={StaticResource StringEqualityConverter}, ConverterParameter=about}" Spacing="25">
                            <TextBlock Text="About HyPrism" FontSize="28" FontWeight="Bold" Foreground="White" FontFamily="{StaticResource Poppins}"/>
                            
                            <Border Background="#252525" CornerRadius="12" Padding="20">
                                <StackPanel Spacing="15">
                                    <TextBlock Text="HyPrism Launcher" FontSize="20" FontWeight="Bold" Foreground="White"/>
                                    <TextBlock Text="Version 1.0.0" FontSize="14" Foreground="Gray"/>
                                    <Rectangle Height="1" Fill="#333"/>
                                    <TextBlock Text="A modern launcher for Hytale" FontSize="13" Foreground="#CCCCCC" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                    </Panel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Border>

</UserControl>
