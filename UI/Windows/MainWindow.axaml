<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:HyPrism.UI.ViewModels"
        xmlns:views="using:HyPrism.UI.Views"
        mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="800"
        x:Class="HyPrism.UI.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="HyPrism"
        Width="1280" Height="800"
        MinWidth="1024" MinHeight="700"
        WindowStartupLocation="CenterScreen"
        Background="#000000">

    <Window.Styles>
        <!-- Overlay Layer Animation -->
        <Style Selector="Grid.overlay-layer">
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
            <Setter Property="Transitions">
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Grid.overlay-layer[Tag=True]">
            <Setter Property="Opacity" Value="1"/>
            <Setter Property="IsHitTestVisible" Value="True"/>
        </Style>
    </Window.Styles>

    <Design.DataContext>
        <vm:MainViewModel/>
    </Design.DataContext>
    
    <Grid>
        <!-- Dashboard Content (The Main App) -->
        <!-- Only visible when loaded to prevent glitches -->
        <Grid Opacity="{Binding MainContentOpacity}">
            <Grid.Transitions>
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="0:0:0.8" Easing="CubicEaseInOut"/>
                </Transitions>
            </Grid.Transitions>
            <views:DashboardView DataContext="{Binding DashboardViewModel}" />
        </Grid>

        <!-- Loading Screen (Global Curtain) -->
        <Grid IsVisible="{Binding IsLoading}" ZIndex="1000" Name="LoadingScreen">
            <Grid.Transitions>
                <Transitions>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:1.0" Easing="CubicEaseInOut"/>
                </Transitions>
            </Grid.Transitions>
            <Grid.Styles>
                <!-- Curtain slide-up animation when loading completes -->
                <Style Selector="Grid[IsVisible=False]">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform Y="-1000"/>
                        </Setter.Value>
                    </Setter>
                </Style>
                <Style Selector="Grid[IsVisible=True]">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform Y="0"/>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Grid.Styles>
            
            <views:LoadingView DataContext="{Binding LoadingViewModel}"/>
        </Grid>
    </Grid>
    
</Window>
