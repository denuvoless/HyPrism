<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:svg="clr-namespace:Avalonia.Svg.Skia;assembly=Avalonia.Svg.Skia">

    <!-- 
    =================================================================
    DROPDOWN INPUT STYLES
    =================================================================
    Shared styles for SelectionInput and MultiSelectionInput components
    -->
    
    <!-- ============================================================
         INPUT TOGGLE - Dropdown trigger button
         ============================================================ -->
    <Style Selector="ToggleButton.InputToggle">
        <Setter Property="Background" Value="#0DFFFFFF"/>
        <Setter Property="BorderBrush" Value="#0DFFFFFF"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="RenderTransform" Value="none"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.1"/>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1" Easing="CubicEaseOut"/>
            </Transitions>
        </Setter>
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Padding="{TemplateBinding Padding}">
                    <ContentPresenter Content="{TemplateBinding Content}"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Stretch"/>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
    
    <Style Selector="ToggleButton.InputToggle:pointerover">
        <Setter Property="Background" Value="#1AFFFFFF"/>
    </Style>
    
    <Style Selector="ToggleButton.InputToggle:pressed">
        <Setter Property="RenderTransform" Value="scale(0.98)"/>
        <Setter Property="Background" Value="#0AFFFFFF"/>
    </Style>

    <!-- Chevron rotation states -->
    <Style Selector="ToggleButton.InputToggle:checked svg|Svg.Chevron">
        <Setter Property="RenderTransform" Value="rotate(0deg)"/>
    </Style>
    
    <Style Selector="ToggleButton.InputToggle:unchecked svg|Svg.Chevron">
        <Setter Property="RenderTransform" Value="rotate(180deg)"/>
    </Style>

    <!-- ============================================================
         SELECTION LIST - Dropdown list styling
         ============================================================ -->
    <Style Selector="ListBox.SelectionList">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <Style Selector="ListBox.SelectionList ListBoxItem">
        <Setter Property="Padding" Value="14,12"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#DDDDDD"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Margin" Value="4,2"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style Selector="ListBox.SelectionList ListBoxItem /template/ ContentPresenter">
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.1" Easing="CubicEaseOut"/>
                <BrushTransition Property="Foreground" Duration="0:0:0.1" Easing="CubicEaseOut"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="ListBox.SelectionList ListBoxItem:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#22FFFFFF"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
    <Style Selector="ListBox.SelectionList ListBoxItem:selected /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource SystemAccentBrush}"/>
        <Setter Property="Foreground" Value="Black"/>
    </Style>

    <!-- Also support MultiSelectionList class for backwards compatibility -->
    <Style Selector="ListBox.MultiSelectionList">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <Style Selector="ListBox.MultiSelectionList ListBoxItem">
        <Setter Property="Padding" Value="14,12"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#DDDDDD"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Margin" Value="4,2"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style Selector="ListBox.MultiSelectionList ListBoxItem /template/ ContentPresenter">
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.1" Easing="CubicEaseOut"/>
                <BrushTransition Property="Foreground" Duration="0:0:0.1" Easing="CubicEaseOut"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="ListBox.MultiSelectionList ListBoxItem:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#22FFFFFF"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    
    <Style Selector="ListBox.MultiSelectionList ListBoxItem:selected /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource SystemAccentBrush}"/>
        <Setter Property="Foreground" Value="Black"/>
    </Style>

    <!-- ============================================================
         DROPDOWN CONTAINER - Animated dropdown panel
         ============================================================ -->
    <Style Selector="Grid#DropdownContainer">
        <Setter Property="IsHitTestVisible" Value="False"/>
        <Setter Property="Opacity" Value="0"/>
        <Setter Property="RenderTransform" Value="scaleY(0.9) translateY(-10px)"/>
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:0.15" Easing="CubicEaseOut"/>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.15" Easing="CubicEaseOut"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Grid#DropdownContainer.expanded">
        <Setter Property="IsHitTestVisible" Value="True"/>
        <Setter Property="Opacity" Value="1"/>
        <Setter Property="RenderTransform" Value="scaleY(1) translateY(0px)"/>
    </Style>

    <!-- Position variants -->
    <Style Selector="Canvas#DropdownPlaceholder.down">
        <Setter Property="Grid.Row" Value="1"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>

    <Style Selector="Canvas#DropdownPlaceholder.up">
        <Setter Property="Grid.Row" Value="0"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
    </Style>

    <Style Selector="Grid#DropdownContainer.down">
        <Setter Property="Canvas.Top" Value="4"/>
    </Style>

    <Style Selector="Grid#DropdownContainer.up">
        <Setter Property="Canvas.Bottom" Value="4"/>
    </Style>

</Styles>
