<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:svg="clr-namespace:Avalonia.Svg.Skia;assembly=Avalonia.Svg.Skia"
             mc:Ignorable="d" d:DesignWidth="40" d:DesignHeight="40"
             x:Class="HyPrism.UI.Components.Buttons.CloseButton"
             x:Name="Root">
    <Button Command="{Binding ElementName=Root, Path=Command}"
            CommandParameter="{Binding ElementName=Root, Path=CommandParameter}"
            Background="Transparent"
            Padding="8"
            CornerRadius="6"
            BorderThickness="0">
        <svg:Svg Path="/Assets/Icons/x.svg" Width="20" Height="20"/>
    </Button>
</UserControl>
