<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:HyPrism.UI.Components.Dashboard.GameControlBar"
             xmlns:btn="using:HyPrism.UI.Components.Buttons.IconButton"
             xmlns:primaryBtn="using:HyPrism.UI.Components.Buttons.PrimaryButton"
             xmlns:svg="clr-namespace:Avalonia.Svg.Skia;assembly=Avalonia.Svg.Skia"
             mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="100"
             x:Class="HyPrism.UI.Components.Dashboard.GameControlBar.GameControlBar"
             x:DataType="vm:GameControlViewModel"
             x:CompileBindings="True">

    <UserControl.Styles>
        <StyleInclude Source="GameControlBarStyles.axaml"/>
    </UserControl.Styles>
    
    <Grid>
        <!-- BOTTOM LEFT: Action Buttons -->
        <StackPanel VerticalAlignment="Bottom" 
                    HorizontalAlignment="Left"
                    Orientation="Horizontal" 
                    Spacing="10">
            <!-- Mods -->
            <btn:IconButton Command="{Binding ToggleModsCommand}"
                            ButtonBackground="#66090909"
                            Width="50" Height="50"
                            IconPath="/Assets/Icons/package.svg"
                            IconSize="24"/>
            
            <!-- Folder -->
            <btn:IconButton Command="{Binding OpenFolderCommand}"
                            ButtonBackground="#66090909"
                            Width="50" Height="50"
                            IconPath="/Assets/Icons/folder.svg"
                            IconSize="24"/>
            
            <!-- Settings -->
            <btn:IconButton Command="{Binding ToggleSettingsCommand}"
                            ButtonBackground="#66090909"
                            Width="50" Height="50"
                            IconPath="/Assets/Icons/settings.svg"
                            IconSize="24"/>
            
            <!-- Network/WiFi -->
            <btn:IconButton ButtonBackground="#66090909"
                            Width="50" Height="50"
                            IconPath="/Assets/Icons/wifi.svg"
                            IconSize="24"/>
        </StackPanel>
        
        <!-- BOTTOM CENTER: Educational Text -->
        <TextBlock VerticalAlignment="Bottom" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,8">
            <Run Text="{Binding MainEducational^}" Foreground="#999" FontSize="12"/>
            <Run Text=" "/>
            <Run Text="{Binding MainBuyIt^}" Foreground="{DynamicResource SystemAccentBrush}" FontSize="12" FontWeight="Bold"/>
        </TextBlock>
        
        <!-- BOTTOM RIGHT: Play Button with Version Selector -->
        <Grid VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Border x:Name="PlaySplitButtonContainer"
                    CornerRadius="10"
                    ClipToBounds="True">
                <Grid ColumnDefinitions="Auto, Auto" Height="50">
                    <Button Classes="VersionAreaButton"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center">
                        <Button.Flyout>
                            <Flyout Placement="TopEdgeAlignedRight" ShowMode="TransientWithDismissOnPointerMoveAway">
                                <Border Background="#E6111111" CornerRadius="12" BorderBrush="#15FFFFFF" BorderThickness="1" Padding="8" MinWidth="200">
                                    <StackPanel Spacing="6">
                                        <!-- Branch Toggle -->
                                        <TextBlock Text="Branch" FontSize="11" Foreground="#888" Margin="8,4,8,2"/>
                                        <StackPanel Orientation="Horizontal" Spacing="4" Margin="4,0">
                                            <Button Content="release" 
                                                    Command="{Binding SwitchBranchCommand}" 
                                                    CommandParameter="release"
                                                    Foreground="White" FontSize="12" Padding="12,6" CornerRadius="8"
                                                    HorizontalContentAlignment="Center">
                                                <Button.Styles>
                                                    <Style Selector="Button">
                                                        <Setter Property="Background" Value="#33FFFFFF"/>
                                                    </Style>
                                                    <Style Selector="Button:pointerover /template/ ContentPresenter">
                                                        <Setter Property="Background" Value="#80090909"/>
                                                    </Style>
                                                </Button.Styles>
                                            </Button>
                                            <Button Content="pre-release" 
                                                    Command="{Binding SwitchBranchCommand}" 
                                                    CommandParameter="pre-release"
                                                    Foreground="White" FontSize="12" Padding="12,6" CornerRadius="8"
                                                    HorizontalContentAlignment="Center">
                                                <Button.Styles>
                                                    <Style Selector="Button">
                                                        <Setter Property="Background" Value="#33FFFFFF"/>
                                                    </Style>
                                                    <Style Selector="Button:pointerover /template/ ContentPresenter">
                                                        <Setter Property="Background" Value="#80090909"/>
                                                    </Style>
                                                </Button.Styles>
                                            </Button>
                                        </StackPanel>
                                        <!-- Version List -->
                                        <TextBlock Text="Version" FontSize="11" Foreground="#888" Margin="8,6,8,2"/>
                                        <ItemsControl ItemsSource="{Binding AvailableVersions}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding}" 
                                                            Command="{Binding $parent[ItemsControl].((vm:GameControlViewModel)DataContext).SelectVersionCommand}"
                                                            CommandParameter="{Binding}"
                                                            Background="Transparent" 
                                                            Foreground="White" FontSize="13" 
                                                            Padding="12,6" CornerRadius="6"
                                                            HorizontalAlignment="Stretch"
                                                            HorizontalContentAlignment="Left">
                                                        <Button.Styles>
                                                            <Style Selector="Button:pointerover /template/ ContentPresenter">
                                                                <Setter Property="Background" Value="#80090909"/>
                                                            </Style>
                                                        </Button.Styles>
                                                    </Button>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </Border>
                            </Flyout>
                        </Button.Flyout>
                        <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                            <svg:Svg Path="/Assets/Icons/git-branch.svg" Width="16" Height="16">
                                <svg:Svg.Css>* { stroke: #ddd !important; fill: #ddd !important; }</svg:Svg.Css>
                            </svg:Svg>
                            <TextBlock Text="{Binding SelectedBranchVersionLabel}" 
                                       FontSize="13" 
                                       Foreground="#ddd"
                                       VerticalAlignment="Center"/>
                            <svg:Svg Path="/Assets/Icons/chevron-up.svg" Width="12" Height="12">
                                <svg:Svg.Css>* { stroke: #888 !important; fill: none; }</svg:Svg.Css>
                            </svg:Svg>
                        </StackPanel>
                    </Button>

                    <primaryBtn:PrimaryButton Grid.Column="1"
                                       Command="{Binding LaunchCommand}"
                                       Height="50"
                                       Padding="18,0"
                                       CornerRadius="0,12,12,0"
                                       FontSize="18">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <svg:Svg Path="/Assets/Icons/play.svg" Width="20" Height="20">
                                <svg:Svg.Css>* { stroke: white !important; fill: white !important; }</svg:Svg.Css>
                            </svg:Svg>
                            <TextBlock Text="{Binding MainPlay^}" VerticalAlignment="Center" Foreground="White"/>
                        </StackPanel>
                    </primaryBtn:PrimaryButton>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>