<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:HyPrism.UI.Components.Dashboard.Header"
             xmlns:svg="clr-namespace:Avalonia.Svg.Skia;assembly=Avalonia.Svg.Skia"
             mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="100"
             x:Class="HyPrism.UI.Components.Dashboard.Header.Header"
             x:DataType="vm:HeaderViewModel"
             x:CompileBindings="True">
    
    <Grid>
        <!-- TOP LEFT: Profile -->
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Spacing="8">
            <StackPanel Orientation="Horizontal" Spacing="12">
                <!-- Avatar (accent border, dark fill like Photino) -->
                <Button Command="{Binding ToggleProfileEditorCommand}"
                        Background="Transparent"
                        Padding="0"
                        CornerRadius="28"
                        Width="56" Height="56">
                    <Border Width="56" Height="56" CornerRadius="28" 
                            BorderBrush="{DynamicResource SystemAccentBrush}"
                            BorderThickness="2"
                            Background="#66090909"
                            ClipToBounds="True">
                        <Panel>
                            <!-- Avatar image from game (when available) -->
                            <Image Source="{Binding AvatarImage}"
                                   Width="52" Height="52"
                                   Stretch="UniformToFill"
                                   IsVisible="{Binding HasAvatar}"/>
                            <!-- User placeholder icon (fallback) -->
                            <svg:Svg Path="/Assets/Icons/user.svg" 
                                     Width="26" Height="26"
                                     HorizontalAlignment="Center" 
                                     VerticalAlignment="Center"
                                     IsVisible="{Binding !HasAvatar}">
                                <svg:Svg.Css>* { stroke: #AAAAAA; fill: none; }</svg:Svg.Css>
                            </svg:Svg>
                        </Panel>
                    </Border>
                </Button>
                
                <!-- Nick + Edit Button -->
                <StackPanel VerticalAlignment="Center" Spacing="2">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="{Binding Nick}" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>
                        <Button Command="{Binding ToggleProfileEditorCommand}"
                                Background="Transparent" 
                                Padding="4" 
                                CornerRadius="4"
                                VerticalAlignment="Center">
                            <svg:Svg Path="/Assets/Icons/edit.svg" Width="14" Height="14"/>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            
            <!-- Version -->
            <TextBlock Text="{Binding AppVersion}" 
                       FontSize="11" 
                       Foreground="#999"
                       Margin="4,0,0,0"/>
        </StackPanel>
        
        <!-- TOP RIGHT: Logo + Icons -->
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Right" Spacing="16">
            <!-- Hytale Logo -->
            <Image Source="/Assets/logo-wide.png" 
                   Width="180" 
                   Height="70" 
                   Stretch="Uniform"
                   HorizontalAlignment="Right"/>
            
            <!-- Action Icons -->
            <StackPanel Orientation="Horizontal" 
                        Spacing="8" 
                        HorizontalAlignment="Right">
                <!-- Discord -->
                <Button Background="Transparent" 
                        Padding="8" 
                        CornerRadius="12"
                        Width="40" Height="40"
                        BorderBrush="#15FFFFFF"
                        BorderThickness="1">
                    <Button.Styles>
                        <Style Selector="Button:pointerover /template/ ContentPresenter">
                            <Setter Property="Background" Value="#335865F2"/>
                        </Style>
                    </Button.Styles>
                    <svg:Svg Path="/Assets/Icons/discord.svg" Width="20" Height="20"/>
                </Button>
                
                <!-- GitHub -->
                <Button Background="Transparent" 
                        Padding="8" 
                        CornerRadius="12"
                        Width="40" Height="40"
                        BorderBrush="#15FFFFFF"
                        BorderThickness="1">
                    <Button.Styles>
                        <Style Selector="Button:pointerover /template/ ContentPresenter">
                            <Setter Property="Background" Value="#80090909"/>
                        </Style>
                    </Button.Styles>
                    <svg:Svg Path="/Assets/Icons/github.svg" Width="20" Height="20"/>
                </Button>
                
                <!-- Bug Report -->
                <Button Background="Transparent" 
                        Padding="8" 
                        CornerRadius="12"
                        Width="40" Height="40"
                        BorderBrush="#15FFFFFF"
                        BorderThickness="1">
                    <Button.Styles>
                        <Style Selector="Button:pointerover /template/ ContentPresenter">
                            <Setter Property="Background" Value="#1AFF4444"/>
                        </Style>
                    </Button.Styles>
                    <svg:Svg Path="/Assets/Icons/bug.svg" Width="18" Height="18"/>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>