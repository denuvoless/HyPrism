<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:HyPrism.ViewModels"
             xmlns:cv="using:HyPrism.Converters"
             xmlns:svg="clr-namespace:Avalonia.Svg.Skia;assembly=Avalonia.Svg.Skia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="HyPrism.Views.SettingsView"
             x:DataType="vm:SettingsViewModel">

    <UserControl.Resources>
        <cv:StringEqualityConverter x:Key="StringEqualityConverter"/>
        <SolidColorBrush x:Key="HytaleOrangeBrush" Color="#FFA845"/>
    </UserControl.Resources>
    
    <UserControl.Styles>
        <Style Selector="Button.TabButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#AAAAAA"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" CornerRadius="6">
                        <ContentPresenter Content="{TemplateBinding Content}" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter>
        </Style>
        <Style Selector="Button.TabButton:pointerover">
            <Setter Property="Background" Value="#1AFFFFFF"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </UserControl.Styles>

    <Border Background="#F2111111" CornerRadius="16" BorderBrush="#33FFFFFF" BorderThickness="1" ClipToBounds="True" BoxShadow="0 10 30 5 #000000">
        <Grid ColumnDefinitions="240, *">
            
            <!-- Sidebar -->
            <Border Grid.Column="0" Background="#111111">
                <Grid RowDefinitions="Auto, *">
                    <TextBlock Text="Settings" Grid.Row="0" Margin="25,30,0,30" FontSize="20" FontWeight="Bold" Foreground="White" FontFamily="{StaticResource Poppins}"/>
                    
                    <ScrollViewer Grid.Row="1">
                        <StackPanel Spacing="4" Margin="10,0">
                            <!-- Debug: Explicitly use SvgIcon to test -->
                            <Button Classes="TabButton" Command="{Binding SwitchTabCommand}" CommandParameter="profile">
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                     <svg:Svg Path="/Assets/Icons/user.svg" Width="18" Height="18"/>
                                     <TextBlock Text="My Profile" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Classes="TabButton" Command="{Binding SwitchTabCommand}" CommandParameter="general">
                                <StackPanel Orientation="Horizontal" Spacing="12">
                                     <svg:Svg Path="/Assets/Icons/settings.svg" Width="18" Height="18"/>
                                     <TextBlock Text="General" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Classes="TabButton" Command="{Binding SwitchTabCommand}" CommandParameter="visual">
                                 <StackPanel Orientation="Horizontal" Spacing="12">
                                     <svg:Svg Path="/Assets/Icons/image.svg" Width="18" Height="18"/>
                                     <TextBlock Text="Visuals" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Classes="TabButton" Command="{Binding SwitchTabCommand}" CommandParameter="language">
                                 <StackPanel Orientation="Horizontal" Spacing="12">
                                     <svg:Svg Path="/Assets/Icons/globe.svg" Width="18" Height="18"/>
                                     <TextBlock Text="Language" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Classes="TabButton" Command="{Binding SwitchTabCommand}" CommandParameter="data" IsEnabled="False">
                                 <StackPanel Orientation="Horizontal" Spacing="12">
                                     <svg:Svg Path="/Assets/Icons/database.svg" Width="18" Height="18"/>
                                     <TextBlock Text="Data" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Classes="TabButton" Command="{Binding SwitchTabCommand}" CommandParameter="instances" IsEnabled="False">
                                 <StackPanel Orientation="Horizontal" Spacing="12">
                                     <svg:Svg Path="/Assets/Icons/hard-drive.svg" Width="18" Height="18"/>
                                     <TextBlock Text="Instances" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Classes="TabButton" Command="{Binding SwitchTabCommand}" CommandParameter="about">
                                 <StackPanel Orientation="Horizontal" Spacing="12">
                                     <svg:Svg Path="/Assets/Icons/info.svg" Width="18" Height="18"/>
                                     <TextBlock Text="About" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Content Area -->
            <Grid Grid.Column="1" Background="#1E1E1E">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header / Close -->
                <Grid Grid.Row="0" Margin="30,0">
                    <Button Command="{Binding CloseCommand}" HorizontalAlignment="Right" VerticalAlignment="Center"
                            Background="#1AFFFFFF" Foreground="White" Width="32" Height="32" CornerRadius="16"
                            Padding="8" BorderThickness="0">
                         <svg:Svg Path="/Assets/Icons/x.svg" Width="14" Height="14"/>
                    </Button>
                </Grid>
                
                <!-- Tab Contents -->
                <ScrollViewer Grid.Row="1" Padding="30,0,30,30">
                    <Panel>
                        
                        <!-- Profile Tab -->
                        <StackPanel IsVisible="{Binding ActiveTab, Converter={StaticResource StringEqualityConverter}, ConverterParameter=profile}" Spacing="25">
                            <TextBlock Text="My Profile" FontSize="28" FontWeight="Bold" Foreground="White" FontFamily="{StaticResource Poppins}"/>
                            
                            <!-- Avatar Section -->
                            <Border Background="#252525" CornerRadius="12" Padding="20">
                                <StackPanel Orientation="Horizontal" Spacing="20">
                                    <Border Width="80" Height="80" CornerRadius="40" Background="{StaticResource HytaleOrangeBrush}" ClipToBounds="True">
                                        <TextBlock Text=":)" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" FontWeight="Bold"/>
                                    </Border>
                                    <StackPanel VerticalAlignment="Center" Spacing="5">
                                        <TextBlock Text="Avatar" FontWeight="Bold" Foreground="White"/>
                                        <Button Content="Upload Skin" Background="#404040" Foreground="White" CornerRadius="6" Padding="15,8"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Nickname -->
                            <StackPanel Spacing="8">
                                <TextBlock Text="Display Name" FontWeight="Medium" Foreground="#CCCCCC"/>
                                <TextBox Text="{Binding Nick}" Background="#252525" Foreground="White" BorderThickness="0" Padding="15" CornerRadius="8" FontSize="16"/>
                                <TextBlock Text="This name will be shown in game." FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- General Tab -->
                        <StackPanel IsVisible="{Binding ActiveTab, Converter={StaticResource StringEqualityConverter}, ConverterParameter=general}" Spacing="25">
                            <TextBlock Text="General Settings" FontSize="28" FontWeight="Bold" Foreground="White" FontFamily="{StaticResource Poppins}"/>
                            
                            <Border Background="#252525" CornerRadius="12" Padding="20">
                                <StackPanel Spacing="20">
                                    <Grid ColumnDefinitions="*, Auto">
                                        <StackPanel Grid.Column="0" Spacing="5">
                                            <TextBlock Text="Close Launcher" FontWeight="Bold" Foreground="White"/>
                                            <TextBlock Text="Close the launcher automatically when the game starts." FontSize="13" Foreground="Gray" TextWrapping="Wrap"/>
                                        </StackPanel>
                                        <ToggleSwitch Grid.Column="1" IsChecked="{Binding CloseAfterLaunch}" OnContent="" OffContent="" Background="#333"/>
                                    </Grid>
                                    
                                    <Rectangle Height="1" Fill="#333333"/>
                                    
                                    <Grid ColumnDefinitions="*, Auto">
                                        <StackPanel Grid.Column="0" Spacing="5">
                                            <TextBlock Text="Disable News" FontWeight="Bold" Foreground="White"/>
                                            <TextBlock Text="Hide the news feed from the main menu." FontSize="13" Foreground="Gray" TextWrapping="Wrap"/>
                                        </StackPanel>
                                        <ToggleSwitch Grid.Column="1" IsChecked="{Binding DisableNews}" OnContent="" OffContent="" Background="#333"/>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Launcher Path Stub -->
                             <StackPanel Spacing="8">
                                <TextBlock Text="Launcher Storage" FontWeight="Medium" Foreground="#CCCCCC"/>
                                <Grid ColumnDefinitions="*, 10, Auto">
                                    <TextBox Grid.Column="0" Text="/path/to/launcher/data" IsReadOnly="True" Background="#252525" Foreground="Gray" BorderThickness="0" Padding="10" CornerRadius="8"/>
                                    <Button Grid.Column="2" Content="Browse" Background="#404040" Foreground="White" CornerRadius="8" Padding="15,8"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>

                    </Panel>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Border>

</UserControl>
